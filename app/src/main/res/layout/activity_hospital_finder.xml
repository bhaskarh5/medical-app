<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Premium Gradient Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/gradient_premium_teal"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:elevation="8dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_back"
            android:background="@drawable/bg_glass_card"
            app:tint="@color/white"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ¥ Find Hospitals"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Filter Dropdowns Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="4dp">

        <!-- Filter Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Distance Filter -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance"
                    android:textSize="12sp"
                    android:textColor="@color/text_tertiary"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/spinnerDistance"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_glass_card"
                    android:padding="8dp"
                    android:popupBackground="@color/white" />
            </LinearLayout>

            <!-- Speciality Filter -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speciality"
                    android:textSize="12sp"
                    android:textColor="@color/text_tertiary"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/spinnerSpeciality"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_glass_card"
                    android:padding="8dp"
                    android:popupBackground="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Map Preview Section -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMapPreview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/ice_blue_light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Map Placeholder -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_dialog_map"
                app:tint="@color/neon_teal"
                android:alpha="0.3"
                android:scaleType="centerInside"
                android:contentDescription="Map Preview" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="ðŸ—ºï¸ Map View"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/neon_teal"
                android:fontFamily="sans-serif-medium" />

            <!-- Expand/Collapse Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExpandMap"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="12dp"
                android:text="Expand"
                android:textColor="@color/neon_teal"
                app:icon="@android:drawable/arrow_down_float"
                app:iconTint="@color/neon_teal" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Hospitals List Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nearby Hospitals"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/tvHospitalCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 found"
            android:textSize="14sp"
            android:textColor="@color/neon_teal"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Hospital Cards List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerHospitals"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:clipToPadding="false"
        android:scrollbars="none" />

    <!-- Sample Hospital Card (will be used in RecyclerView) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/sampleHospitalCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Hospital Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/ic_hospital"
                    android:background="@drawable/gradient_premium_teal"
                    android:padding="12dp"
                    app:tint="@color/white"
                    android:contentDescription="Hospital" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apollo Hospital"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Multi-Speciality Hospital"
                        android:textSize="13sp"
                        android:textColor="@color/text_tertiary"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- Status Badge -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OPEN 24/7"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/gradient_green"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:letterSpacing="0.1" />
            </LinearLayout>

            <!-- Hospital Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <!-- Distance -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_location_pulse"
                        android:contentDescription="Distance" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.5 km"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <!-- Rating -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@android:drawable/star_on"
                        app:tint="@color/accent_yellow"
                        android:contentDescription="Rating" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <!-- Beds Available -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_medical_info"
                        app:tint="@color/neon_teal"
                        android:contentDescription="Beds" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12 beds"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginStart="4dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Call"
                    android:textColor="@color/neon_teal"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/neon_teal"
                    app:icon="@android:drawable/sym_action_call"
                    app:iconTint="@color/neon_teal" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="Directions"
                    android:textColor="@color/white"
                    android:background="@drawable/gradient_premium_teal"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_menu_directions"
                    app:iconTint="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
