<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_premium_teal">

    <!-- Pulse Wave Background (for animation) -->
    <ImageView
        android:id="@+id/ivPulseWave"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@drawable/bg_pulse_ring"
        android:alpha="0.3"
        android:contentDescription="Pulse Wave" />

    <!-- Center Content -->
    <LinearLayout
        android:id="@+id/centerContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Medical Cross Logo (will animate from particles) -->
        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_emergency"
            app:tint="@color/white"
            android:contentDescription="LifeGuard Assist Logo"
            android:scaleType="fitCenter"
            android:elevation="8dp" />

        <!-- App Name with premium styling -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="24dp"
            android:letterSpacing="0.05"
            android:shadowColor="@color/shadow_teal_glow"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="12" />

        <!-- Tagline with glow -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_tagline"
            android:textSize="16sp"
            android:textColor="@color/ice_blue"
            android:fontFamily="sans-serif"
            android:layout_marginTop="8dp"
            android:letterSpacing="0.08" />

    </LinearLayout>

    <!-- Glossy Shine Overlay (for animation) -->
    <View
        android:id="@+id/viewShine"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:alpha="0.2"
        android:visibility="invisible" />

    <!-- Bottom Progress Loader with premium styling -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:orientation="vertical"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateTint="@color/ice_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textSize="14sp"
            android:textColor="@color/ice_blue"
            android:layout_marginTop="12dp"
            android:letterSpacing="0.1" />
    </LinearLayout>

</RelativeLayout>
