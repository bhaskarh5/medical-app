<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Premium Gradient Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/gradient_emergency"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:elevation="8dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_back"
            android:background="@drawable/bg_glass_card"
            app:tint="@color/white"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸš¨ Report Accident"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Progress Bar with Liquid Animation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/white"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tvProgressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 1 of 4"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <ProgressBar
            android:id="@+id/progressWizard"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:max="4"
            android:progress="1"
            android:progressTint="@color/emergency_red"
            android:progressBackgroundTint="@color/emergency_light" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Step 1: Accident Type -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStep1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1ï¸âƒ£ Type of Accident"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="16dp" />

                    <Spinner
                        android:id="@+id/spinnerAccidentType"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_glass_card"
                        android:padding="12dp"
                        android:popupBackground="@color/white"
                        android:dropDownWidth="match_parent" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Step 2: Injury Severity -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStep2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2ï¸âƒ£ Injury Severity"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="16dp" />

                    <Spinner
                        android:id="@+id/spinnerSeverity"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_glass_card"
                        android:padding="12dp"
                        android:popupBackground="@color/white"
                        android:dropDownWidth="match_parent" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Step 3: Number of Victims -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStep3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3ï¸âƒ£ Number of Victims"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="16dp" />

                    <Spinner
                        android:id="@+id/spinnerVictims"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_glass_card"
                        android:padding="12dp"
                        android:popupBackground="@color/white"
                        android:dropDownWidth="match_parent" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Step 4: Location (Auto-Detect) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStep4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4ï¸âƒ£ Location"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="16dp" />

                    <!-- Location Button with Glow -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDetectLocation"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="ðŸ“ Auto-Detect Location"
                        android:textColor="@color/neon_teal"
                        app:cornerRadius="16dp"
                        app:strokeColor="@color/neon_teal"
                        app:strokeWidth="2dp"
                        app:icon="@drawable/ic_location_pulse"
                        app:iconGravity="textStart" />

                    <TextView
                        android:id="@+id/tvLocationStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to detect your location"
                        android:textSize="13sp"
                        android:textColor="@color/text_tertiary"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Upload Image Option -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/ice_blue_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivPreview"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@android:drawable/ic_menu_camera"
                        app:tint="@color/neon_teal"
                        android:background="@drawable/bg_glass_card"
                        android:padding="24dp"
                        android:contentDescription="Photo Preview" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUploadImage"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload Photo (Optional)"
                        android:textColor="@color/neon_teal"
                        android:layout_marginTop="12dp"
                        app:icon="@android:drawable/ic_menu_camera"
                        app:iconTint="@color/neon_teal" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Submit Button with Pulsating Glow -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmitReport"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="ðŸš¨ Submit Emergency Report"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/bg_emergency_glow"
                app:cornerRadius="20dp"
                android:elevation="8dp"
                android:layout_marginBottom="32dp"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
