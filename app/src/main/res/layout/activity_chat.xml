<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Premium Gradient Header -->
    <LinearLayout
        android:id="@+id/chatHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/gradient_premium_teal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:elevation="8dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:background="@drawable/bg_glass_card"
            app:tint="@color/white"
            android:contentDescription="Back" />

        <!-- Responder Info -->
        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_person"
            android:background="@drawable/bg_avatar_glow"
            android:padding="8dp"
            android:contentDescription="Responder" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency Responder"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="● Online"
                android:textSize="12sp"
                android:textColor="@color/ice_blue"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Call Button -->
        <ImageButton
            android:id="@+id/btnCall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/sym_action_call"
            android:background="@drawable/bg_glass_card"
            app:tint="@color/white"
            android:contentDescription="Call" />
    </LinearLayout>

    <!-- Messages RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerMessages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/chatHeader"
        android:layout_above="@id/layoutInput"
        android:padding="16dp"
        android:clipToPadding="false"
        android:scrollbars="none" />

    <!-- Typing Indicator -->
    <LinearLayout
        android:id="@+id/typingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/layoutInput"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@drawable/bg_glass_card"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:indeterminateTint="@color/neon_teal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Typing..."
            android:textSize="12sp"
            android:textColor="@color/text_tertiary"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Quick Reply Chips (Hidden sample) -->
    <HorizontalScrollView
        android:id="@+id/quickRepliesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layoutInput"
        android:layout_marginBottom="8dp"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes, I'm safe"
                android:textColor="@color/neon_teal"
                app:chipBackgroundColor="@color/glass_white"
                app:chipStrokeColor="@color/neon_teal"
                app:chipStrokeWidth="1dp" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send ambulance"
                android:textColor="@color/emergency_red"
                app:chipBackgroundColor="@color/emergency_light"
                app:chipStrokeColor="@color/emergency_red"
                app:chipStrokeWidth="1dp"
                android:layout_marginStart="8dp" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share location"
                android:textColor="@color/primary_blue"
                app:chipBackgroundColor="@color/ice_blue_light"
                app:chipStrokeColor="@color/primary_blue"
                app:chipStrokeWidth="1dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Input Section -->
    <LinearLayout
        android:id="@+id/layoutInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/white"
        android:elevation="8dp"
        android:gravity="center_vertical">

        <!-- Voice Button -->
        <ImageButton
            android:id="@+id/btnVoice"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_btn_speak_now"
            android:background="@drawable/bg_glass_card"
            app:tint="@color/neon_teal"
            android:contentDescription="Voice Message" />

        <!-- Text Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            app:boxCornerRadiusTopStart="24dp"
            app:boxCornerRadiusTopEnd="24dp"
            app:boxCornerRadiusBottomStart="24dp"
            app:boxCornerRadiusBottomEnd="24dp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:boxBackgroundColor="@color/background"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type a message..."
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="4"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Send Button -->
        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_send"
            android:background="@drawable/gradient_premium_teal"
            app:tint="@color/white"
            android:contentDescription="Send" />
    </LinearLayout>

    <!-- Sample Message Bubbles (Hidden - for reference) -->

    <!-- Received Message Bubble -->
    <LinearLayout
        android:id="@+id/sampleReceivedMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        android:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:maxWidth="280dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Are you safe? Can you respond?"
                    android:textSize="15sp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:30 AM"
                    android:textSize="11sp"
                    android:textColor="@color/text_quaternary"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Sent Message Bubble -->
    <LinearLayout
        android:id="@+id/sampleSentMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            android:background="@drawable/gradient_premium_teal"
            app:cardBackgroundColor="@color/neon_teal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:maxWidth="280dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes, I'm okay. Minor injuries only."
                    android:textSize="15sp"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:31 AM ✓✓"
                    android:textSize="11sp"
                    android:textColor="@color/ice_blue"
                    android:layout_marginTop="4dp"
                    android:gravity="end" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</RelativeLayout>
