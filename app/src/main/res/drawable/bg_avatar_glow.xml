<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glow effect -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/ice_blue_glow" />
            <size
                android:width="72dp"
                android:height="72dp" />
        </shape>
    </item>
    <!-- Main circle -->
    <item
        android:top="4dp"
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
            <stroke
                android:width="3dp"
                android:color="@color/neon_teal" />
            <size
                android:width="64dp"
                android:height="64dp" />
        </shape>
    </item>
</layer-list>
